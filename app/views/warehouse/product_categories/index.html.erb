<h3>Alla varukategorier</h3>
  <% if flash[:error] %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <ul>
        <li><%= flash[:error] %></li>
      </ul>
    </div>
  <% end %>
<div class="table-responsive col-xs-12 col-sm-12 col-md-12 col-lg-9">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Kategorinamn</th>
        <th>Ta bort</th>
      </tr>
    </thead>
    <tbody>
      <% @product_categories.each do |p| %>
      <tr>
        <td><%= link_to p.name, edit_product_category_path(p) %></td>
        <td><%= link_to icon("remove"), product_category_path(p), method: "delete", class: "btn btn-default btn-xs" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
