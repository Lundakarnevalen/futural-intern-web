<h2>Inleverans</h2>
<div class="table-responsive">
  <%= form_tag update_multiple_warehouse_products_path, :method => :put do %>
  <table class="table">
    <thead>
      <tr>
        <th>Vara</th>
        <th>Streckkod</th>
        <th>Lagerplats</th>
        <th>I lager (obeställd)</th>
        <th>I lager (beställd)</th>
        <th>Ej i lager (beställd)</th>
        <th>Enhet</th>
        <th>Lägg till antal</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |p| %>
      <% if p.warning_limit.blank? %>
        <tr>
      <% elsif p.stock_balance_not_ordered < p.warning_limit %>
        <tr class="danger">
      <% else %>
        <tr class="success">
      <% end %>
        <td><%= p.name %></td>
        <td><%= p.ean %></td>
        <td><%= p.stock_location %></td>
        <td><%= p.stock_balance_not_ordered %></td>
        <td><%= p.stock_balance_ordered %></td>
        <td><%= p.stock_balance_stand_by %></td>
        <td><%= p.unit %></td>
        <td><%= number_field_tag "new_amount[#{p.id}]", nil, min: 1, class: "form-control" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag "Spara och slutför", class: "btn btn-primary" %>
  <%= submit_tag "Spara och fortsätt senare", class: "btn btn-primary" %>
  <% end %>
</div>
