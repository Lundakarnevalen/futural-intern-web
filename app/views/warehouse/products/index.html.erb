<%= link_to "Lägg till ny vara", new_product_path, class: "btn btn-primary"  %>
<h2>Aktiva varor</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Vara</th>
        <th>Streckkod</th>
        <th>Lagerplats</th>
        <th>I lager (obeställd)</th>
        <th>I lager (beställd)</th>
        <th>Ej i lager (beställd)</th>
        <th>Enhet</th>
        <th>Inaktivera</th>
      </tr>
    </thead>
    <tbody>
      <% @products_active.each do |p| %>
      <tr>
        <td><%= link_to p.name, edit_product_path(p.id) %></td>
        <td><%= p.ean %></td>
        <td><%= p.stock_location %></td>
        <td><%= p.stock_balance_not_ordered %></td>
        <td><%= p.stock_balance_ordered %></td>
        <td><%= p.stock_balance_stand_by %></td>
        <td><%= p.unit %></td>
        <td><%= link_to icon("remove"), inactivate_products_path(id: p.id), class: "btn btn-default btn-xs" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<h2>Inaktiva varor</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Vara</th>
        <th>Streckkod</th>
        <th>Lagerplats</th>
        <th>I lager (obeställd)</th>
        <th>I lager (beställd)</th>
        <th>Ej i lager (beställd)</th>
        <th>Enhet</th>
        <th>Aktivera</th>
      </tr>
    </thead>
    <tbody>
      <% @products_inactive.each do |p| %>
      <tr>
        <td><%= link_to p.name, edit_product_path(p.id) %></td>
        <td><%= p.ean %></td>
        <td><%= p.stock_location %></td>
        <td><%= p.stock_balance_not_ordered %></td>
        <td><%= p.stock_balance_ordered %></td>
        <td><%= p.stock_balance_stand_by %></td>
        <td><%= p.unit %></td>
        <td><%= link_to icon("ok"), activate_products_path(id: p.id), class: "btn btn-default btn-xs" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
