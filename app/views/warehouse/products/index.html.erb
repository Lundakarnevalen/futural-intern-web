<h2>Alla varor</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Vara</th>
        <th>EAN</th>
        <th>Lagerplats</th>
        <th>I lager (opaxat)</th>
        <th>I lager (paxat)</th>
        <th>I lager (standby)</th>
        <th>Enhet</th>
        <th>Inaktivera</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |p| %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.ean %></td>
        <td><%= p.stock_location %></td>
        <td><%= p.stock_balance_not_ordered %></td>
        <td><%= p.stock_balance_ordered %></td>
        <td><%= p.stock_balance_stand_by %></td>
        <td><%= p.unit %></td>
        <td><button type="button" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-remove"></span></button></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
