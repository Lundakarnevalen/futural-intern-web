<% if @bestallare %>
  <h3>Mina ordrar</h3>
<% else %>
  <h3>Alla ordrar</h3>
  <!-- TODO: Select sektion -->
<% end %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Order #</th>
        <th>Kund</th>
        <th>Beställare</th>
        <th>Status</th>
        <th>Beställningsdatum</th>
        <th>Hämtdatum</th>
        <th>Totalsumma</th>
      </tr>
    </thead>
    <tbody>
    <% if !@orders.nil? %>
    <% @orders.each do |o| %>
      <tr>
        <td><%= link_to "#{o.order_number}", order_path(o.id) %></td>
        <td><%= o.sektion.name %></td>
        <td><%= "#{o.karnevalist.fornamn} #{o.karnevalist.efternamn}" %></td>
        <td><%= o.status.blank? ? "Bearbetas" : o.status %></td>
        <td><%= o.order_date.strftime("%Y-%m-%d") %></td>
        <td><%= o.delivery_date.blank? ? "Direktförsäljning" : o.delivery_date.strftime("%Y-%m-%d")%></td>
        <td><%= number_to_currency(o.total_sum) %></td>
      </tr>
    <% end %>
    <% if @bestallare %>
      <tr class="sum">
        <td colspan="6"></td>
        <td><%= number_to_currency(Order.my_orders_total_sum(current_user.karnevalist.id, @warehouse_code)) %></td>
      </tr>
    <% end %>
    <% end %>
    </tbody>
  </table>
</div>
