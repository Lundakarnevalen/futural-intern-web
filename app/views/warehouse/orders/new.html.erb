<div class="container"></div>
    <div class="row">
        <div class="col-lg-12">
            <h3>Skapa en order</h3>
        </div>
    
    
        
        	<%= form_for [:warehouse, @order] do |f| %>
            <table class="table" id="table">
                <thead>
                    <tr>
                        <th>Namn</th>
				        <th>EAN</th>
				        <th><!-- Här ska ändras-->Antal</th>
				        <th>Enhet</th>
				        <th>Pris/enhet</th>
				        <th>Totalt pris</th>
				        <th>Lagerplats</th>
				        <th>I lager (opaxat)</th>
				        <th>I lager (paxat)</th>
				        <th>I lager (standby)</th>
				        
                    </tr>
                </thead>
                <tbody>
                	<% @products.each do |p| %>
                    <tr>
                        <td><%= p.name %></td>
                        <td><%= p.ean %></td>
                        <td><!--Här ska ändras--><input class="form-control" name="amount" placeholder="Hur många vill du beställa?" type="text"></td>
                        <td><%= p.unit %></td>
                        <td><%= p.purchase_price %> kr</td>
                        <td>kr</td>
                        <td><%= p.stock_location %></td>
                        <td><%= p.stock_balance_ordered %></td>
                        <td><%= p.stock_balance_not_ordered %></td>
                        <td><%= p.stock_balance_stand_by %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <%= f.submit "Beställ", class: "btn btn-primary" %>
        	<% end %>
            <hr>
        </div>
    </div>
    </div>
</div>
