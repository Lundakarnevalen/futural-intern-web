<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Ordernummer: <%= @order.order_number %></h3>
      </div>
      <div class="panel-body">
        <p><strong>Status: </strong> <%= @order.status %></p>
        <p><strong>Beställare: </strong> <%= "#{@order.karnevalist.fornamn} #{@order.karnevalist.efternamn}" %></p>
        <p><strong>Sektion: </strong> <%= @order.sektion.name %></p>
        <p><strong>Beställningsdatum: </strong> <%= @order.order_date.strftime("%Y-%m-%d %H:%M") %></p>
        <p><strong>Hämtdatum: </strong> <%= !@order.delivery_date.blank? ? @order.delivery_date.strftime("%Y-%m-%d") : "Direktförsäljning" %></p>
        <p><strong>Totalpris: </strong> <%= number_to_currency(@order.total_sum) %></p>
        <p><%= link_to "Visa Kvitto", order_path(@order.id, :format => "pdf") %></p>

        <% if ((current_user.is? :admin_fabriken) && @warehouse_code == 0) || (((current_user.is? :admin_festmasteriet) || (current_user.is? :kassor_festmasteriet)) && @warehouse_code == 1) || (current_user.is? :admin) %>
        <tr>
          <% if @levererad == false && @makulerad == false && @part_delivered == false %>
              <td>
                <%= form_for @order, url: order_path(@order), method: "put" do |f| %>
                  <%= f.hidden_field :status, value: "Levererad" %>
                  <%= f.submit "Leverera", class: "btn btn-success" %>
                <% end %>
              </td>
              <td>
                <%= form_for @order, url: order_path(@order), method: "put" do |f| %>
                  <%= f.hidden_field :status, value: "Dellevererad" %>
                  <%= f.submit "Delleverera", class: "btn btn-default" %>
                <% end %>
              </td>
              <td>
                <%= form_for @order, url: order_path(@order), method: "put" do |f| %>
                  <%= f.hidden_field :status, value: "Makulerad" %>
                  <%= f.submit "Makulera", class: "btn btn-danger" %>
                <% end %>
              </td>
          <% end %>
        </tr>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% if (@order.status != "Levererad" && @order.status != "Makulerad") && (((current_user.is? :admin_fabriken) && @warehouse_code == 0) || (((current_user.is? :admin_festmasteriet) || (current_user.is? :kassor_festmasteriet)) && @warehouse_code == 1) || (current_user.is? :admin))
    @show_partial = true
  else
    @show_partial = false
  end %> 
<% if (@order.status == "Levererad") && (((current_user.is? :admin_fabriken) && @warehouse_code == 0) || (((current_user.is? :admin_festmasteriet) || (current_user.is? :kassor_festmasteriet)) && @warehouse_code == 1) || (current_user.is? :admin))
    @show_return = true
  else
    @show_return = false
  end %> 
<div class="row">
<div class="col-lg-12">
  <div class="table-responsive">
    <table class="table table-striped" id="table">
      <thead>
        <tr>
          <th>Varunamn</th>
          <th>Kategori</th>
          <th>Mängd</th>
          <th>Styckpris</th>
          <th>Totalpris</th>
          <th>Levererat antal</th>
          <% if @show_partial %>
            <th>Dellevera antal</th>
          <% end %>
          <% if @show_return %>
            <th>Returnera antal</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
          <% @order.products.each do |p| %>
            <% amount = p.amount(@order.id) %>
        <tr>
          <td>
            <a data-toggle="modal" href="#product<%= p.id %>"><%= p.name %></a>
<!-- Modal -->
<div class="modal fade" id="product<%= p.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title text-info" id="product<%= p.id %>Label">Produktinfo</h4>
      </div>
      <div class="modal-body">
        <%= render partial: 'warehouse/products/show', locals: { p: p } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
          </td>
          <td><%= p.product_category.name %></td>
          <td><%= "#{amount} #{p.unit}" %></td>
          <td><%= number_to_currency(p.sale_price) %></td>
          <td><%= number_to_currency(p.total_price(amount)) %></td>
          <td><%= p.delivered_amount(@order.id) %></td>
          <% if @show_partial %>
            <%= form_for @partial_delivery do |f| %>
                <%= f.hidden_field :order_id, :value => @order.id %>
            <td>
              <%= f.fields_for :partial_delivery_products do |pd| %>
                <%= pd.number_field :amount, class: "form-control", style: "width: 100%;" %>
                <%= pd.hidden_field :product_id, :value => p.id %>
              <% end %>
            </td>
          <% end %>
          <% if @show_return %>
            <%= form_tag return_products_order_path, method: :put do |f| %>
          <td><%= number_field_tag "return_amount[#{p.id}]", nil, min: 1, class: "form-control" %><td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
<% if !@order.comment.blank? %>
<hr>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-6">
    <p><strong>Kommentar:</strong><br><%= @order.comment %></p>
  </div>
</div>
<hr>
<% end %>
<% if @show_partial %>
  <%= f.submit "Delleverera", class: "btn btn-primary" %>
  <% end %>
<% end %>
<% if @show_return %>
  <%= hidden_field_tag 'order_id', @order.id %>
  <%= submit_tag "Returnera varor", class: "btn btn-primary" %>
  <% end %>
<% end %>
