    <div class="input-group">
      <div class="col-xs-6">
        <div class="input-group-btn">
          <span class="btn btn-file">
            VÃ¤lj fil
            <%= f.file_field :image %>
          </span>
          <input type="text" class="form-control" readonly />
        </div>
      </div>
    </div>

    <p>
      <%= f.label :caption, "Bildtext" %><br />
