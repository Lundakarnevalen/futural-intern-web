<div class="cloud-bg">
  <div id="identification" class="container clouds">
          <header>
                  
                  <img src="../assets/karnevalist-large.png" />
                  
          </header>

          <div class="sign">
          
                  <h1>Välkommen!</h1>
                  <p>Är du karnevalist?</p>
          
          </div>
          
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          
          <div class="box">
                  
                  <div class="form-group">
                    <%= f.label :email, 'E-postadress' %>
                    <%= f.email_field :email, :autofocus => true %>
                  </div>
                  
                  <div class="form-group">
                          <%= f.label :password, 'Lösenord' %>
                          <%= f.password_field :password %>
                  </div>
                  
                    <% if devise_mapping.rememberable? -%>
                      <div class="form-group">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me, 'Kom ihåg mig' %>
                      </div>
                    <% end -%>
          
          </div>
          
          <div class="form-group">
              <%= f.submit 'Logga in' %>
          </div>
          
          <div class="options">
          
                  <%= link_to "Skicka mitt lösenord!", new_password_path(resource_name), class: "request-password" %>
                  
          </div>
          
          <% end %>
          
          <!--<%= render "devise/shared/links" %>
          
          <a href=<%= new_karnevalist_path %> class="sign_in_link">Registrera ny karnevalist? Klicka här!</a>-->
  </div>
</div>

