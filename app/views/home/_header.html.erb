<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <img width="16px" src="assets/hamburger-icon-yellow.svg" />
      </button>
      <div id="logotype" class="navbar-left">
        <%=link_to (image_tag "karnevalist-logotyp@2x.png"), root_url %>
      </div>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <%# General stuff %>
        <% if can? :read, Notification %>
          <li><%= link_to 'Läsa gamla pushnotiser', Notification %></li>
        <% end %>
        <%# Warehouse stuff %>
        <% if (current_user.is? :admin_fabriken) || (current_user.is? :bestallare_fabriken) || (current_user.is? :admin) %>
          <li><%= link_to 'Lagersystem Fabriken', fabriken_orders_path %></li>
        <% end %>
        <% if (current_user.is? :admin_festmasteriet) || (current_user.is? :bestallare_festmasteriet) || (current_user.is? :kassor_festmasteriet) || (current_user.is? :admin) %>
          <li><%= link_to 'Lagersystem Festmästeriet', fest_orders_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <div id="profile-image-container" class="col-xs-4">
          <% if current_user.karnevalist.nil? || current_user.foto_url.nil? %>
            <%= image_tag "picture_default.jpg" %>
          <% else %>
            <%= image_tag(current_user.karnevalist.foto_url.to_s) %>
          <% end %>
        </div>
        <div id="profile-information-container" class="col-xs-8">
          <% if current_user.karnevalist.nil? %>
            <% message = "Hej!" %>
          <% else %>
            <% message = "Hej, " + current_user.karnevalist.fornamn %>
          <% end %>
          <h5><%= link_to message, current_user.karnevalist %></h5>
		  <%= sign_out_link 'Logga ut?' %>

        </div>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


