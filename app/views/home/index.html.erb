<%= render partial: "shared/header", locals: {title: "NYHETER"} %>

<% if current_user.is? :info %>
  <%= render partial: "shared/message", locals: {title: "Hejsan info-person!", content: render_markdown(File.read('app/assets/info_clarification.txt'))} %>
<% end %>
<% if !(current_karnevalist?) %>
  <%= render partial: "shared/message", locals: {title: "Hoppsan!", content: "Något har blivit fel och du verkar inte vara en karnevalist, kontakta IT!"} %>
<% elsif !(current_sektioner?) %>
  <%= render partial: "shared/message", locals: {title: "Hoppsan!", content: "Du verkar inte ha fått tilldelad dig en sektion, kontakta IT!"} %>
<% elsif @posts.empty? %>
  <%= render partial: "shared/message", locals: {title: "Hejsan!", content: "Ingen kommunikationsperson verkar ha skrivit något vackert, engagerande, magiskt eller futuralt här än :(" } %>
<% else %>
  <ol class="posts">
    <%= render @posts %>
  </ol>
<% end %>
