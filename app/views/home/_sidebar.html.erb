<% if user_signed_in? %>
<!--Sektion-->
<div id="sektion" class="dropdown toggled row">
  <div class="header col-xs-12">
    <div class="col-xs-10">INFORMATION</div>
    <div class="col-xs-2">
      <%=image_tag "hamburger-icon.svg", {width: 16} %>
    </div>
  </div>
  <ul class="nav">
    <% unless current_karnevalist.nil? %>
      <li><%= link_to "Mina uppgifter", current_karnevalist %></li>
      <% unless current_sektioner.empty? %>
        <li><%= link_to "Sektionsinfo", current_karnevalist.sektion %></li>
        <li><%= link_to "Kontakt", show_contact_sektioner_path(current_karnevalist.sektion) %></li>
        <li><%= link_to "In English", show_english_sektioner_path(current_karnevalist.sektion) %></li>
      <% end %>
    <% end %>
    <%# General stuff %>
    <% if can? :read, Notification %>
        <li><%= link_to 'Pushnotiser', Notification %></li>
    <% end %>
    <li><%= link_to 'Karneblocket', TicketListing %></li>
  </ul>
</div>
<!--Admin-->
<% if current_user.roles.any? %>
<div id="admin" class="dropdown toggled row">
  <div class="header col-xs-12">
    <div class="col-xs-10">ADMIN</div>
    <div class="col-xs-2">
      <%=image_tag "hamburger-icon.svg", {width: 16} %>
    </div>
  </div>
  <ul class="nav">
    <% # Admin stuff %>
    <% if current_user.is? :admin %>
      <% if can? :read, Karnevalist %>
        <li><%= link_to 'Karnevalistan', Karnevalist %></li>
      <% end %>
      <% if can? :read, Sektion %>
        <li><%= link_to 'Sektionslistan', Sektion %></li>
      <% end %>
    <%# Sektionsadmin stuff %>
    <% elsif current_user.is? :sektionsadmin and current_karnevalist? %>
      <% if can? :read, Karnevalist %>
        <li><%= link_to 'Karnevalistan', Karnevalist %></li>
      <% end %>
      <% s = current_user.karnevalist.sektion %>
      <% if can? :read, s %>
        <li><%= link_to 'Administrera din sektion', s %></li>
      <% end %>
      <% if current_user.sektioner.count > 1 %>
        <li><%= link_to 'Sektionslistan', Sektion %></li>
      <% end %>
    <% end %>
    <% # Events %>
    <% if can? :create, Event and current_karnevalist? %>
      <li><%= link_to 'Skapa hÃ¤ndelse', new_event_path %></li>
    <% end %>
    <% # Posts %>
    <% if can? :create, Post and current_karnevalist? %>
      <li><%= link_to 'Skapa nyhet', new_post_path %></li>
    <% end %>
    <% # Notifications %>
    <% if can? :create, Notification %>
      <li><%= link_to 'Skicka pushnotiser', new_notification_path %></li>
    <% end %>
    <% # Exporter %>
    <% if current_user.can? :export_all, Karnevalist %>
      <li><%= link_to 'Exportera personuppgifter', export_all_karnevalister_path %></li>
    <% end %>
    <% # Checker %>
    <% if can? :check, Karnevalist %>
      <li><%= link_to 'Karnevalistkoll', check_karnevalister_path %></li>
    <% end %>
    <% # Access admin %>
    <% if can? :manage, Role %>
      <li><%= link_to 'Administrera accesser', roles_path %></li>
    <% end %>
    <% if can? :checkout, Karnevalist %>
      <li><%= link_to 'Checka ut karnevalist', checkout_karnevalister_path %></li>
    <% end %>
  </ul>
</div>
<% end %>
<!--Evenemang-->
<div id="evenemang" class="row">
  <div class="header col-xs-12">
    EVENEMANG
  </div>
  <ul class="nav">
    <% Event.upcoming.for_sektioner(current_sektioner).each do |e| %>
      <li>
        <div class="block">
          <div class="date col-xs-4">
            <p><%= short_date e.date %></p>
          </div>
          <div class="information col-xs-8">
            <%= link_to e.title, e %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= link_to "SE FLER", events_path, :class => "button btn more" %>
</div>
<% end %>
