<% content_for :head do %>
<%= stylesheet_link_tag :notifications, :media => :all %>
<% end %>

<% if !(browser.iphone? && browser.version == "0") %>
<div class="header">
  <div class="container">
    <h1>Push-meddelanden</h1>
  </div>
</div>
<% end %>

<div class="container">
  <%= form_for(@notification) do |f| %>
    <h2>Nytt push-meddelande</h2>
    <% if @notification.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @notification.errors.each do |field, msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, "Rubrik" %>
      
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <%= f.label :message, "Meddelande" %>
      
      <%= f.text_area :message, :rows => 6, :cols => 40 %>
    </div>

    <div class="form-controls">
      <%= f.submit "Skicka" %>
    </div>
  <% end %>
</div>
