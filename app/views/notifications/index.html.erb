<% content_for :head do %>
<%= stylesheet_link_tag :notifications, :media => :all %>
<% end %>

<% if !(browser.iphone? && browser.version == "0") %>
<div class="header">
	<div class="container">
		<h1>Push-meddelanden</h1>
	</div>
</div>
<% end %>
<div class="container">
	<% @notifications.each do |n| %>
		<a href=<%= url_for n %>>
			<div class="message">
				<div class="title"><%= n.title %></div>
				<div class="date"><%= n.created_at.strftime("%Y-%m-%d %H:%M") %></div>
			</div>	
	<% end %>
</div>

