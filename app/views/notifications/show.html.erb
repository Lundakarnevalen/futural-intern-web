<%= render partial: "shared/header", locals: {title: "Push-meddelanden"} %>

<div class="white-container col-xs-12" id="content">
	<h1><%= @notification.title %></h1>
  <p><strong>Mottagare: </strong> <%= @notification.recipient_id == 0 ? "Alla karnevalister" : Sektion.find(@notification.recipient_id).name %></p><br>
	<p><%= @notification.message %></p>
  <p class="message-date">Skickat <%= @notification.created_at.strftime("%Y-%m-%d %H:%M") %></p>
	<a href="<%= notifications_path %>" ><div class="button btn">
		Tillbaka
	</div></a>
</div>
