<%= form_tag TicketListing, :method => :get do %>
  <%= label_tag :event_id, 'Händelse' %>
  <%= select_tag :event_id,
    options_from_collection_for_select(@events, :id, :title, :selected => params[:event_id]),
      :prompt => '*', :class => 'autosubmit' %>

  <%= label_tag :listing_type, 'Önskar sälja/byta' %>
  <%= select_tag :listing_type, options_for_select([
    ['Sälja', 'sälja' ], ['Byta', 'byta' ], ['Köpa', 'köpa']], :selected => params[:listing_type]),
    :prompt => '*', :class => 'autosubmit' %>

  <%= submit_tag 'Filtrera', :class => 'js-hide' %>
  <%= link_to 'Mina annonser', ticket_listings_path(:seller_id => current_karnevalist.id),
              :class => 'button' %>
  <%= link_to 'Nollställ', ticket_listings_path, :class => 'button' %>
<% end %>
