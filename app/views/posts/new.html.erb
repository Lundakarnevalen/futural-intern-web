        <%= f.label :title, "Byt sektion att skicka till" %>
        <%= f.collection_select :sektion, @tilldelade_sektioner, :id, :name, :selected => @post_sektion %>
      <% end %>
    </div>
    <div class="form_group">
      <%= f.label :title, "Rubrik" %>
