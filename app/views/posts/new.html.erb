    </div>
    <div class="form_group">
      <%= f.label :title, "Text" %>
      <%= f.text_area :content, placeholder: "Skriv vacker text h채r..." %>
    </div>
    <%= render partial: "shared/markdown_notice" %>
    <div class="form-controls">
      <%= f.submit "Klar", class: "btn btn-large btn-primary" %>
    </div>
  <% end %>
</div>
