<div class="row">
    <%= link_to "Tillbaka", root_url, class: "btn btn-small col-xs-2 col-md-offset-2" %>
  <div class="image-container col-xs-4">
    <div class="message-image">
      <%= image_tag("logotyper/#{@post.sektion.name}.png") %>
    </div>
    <div class="sektion">
      <%= @post.sektion.name %>
    </div>
  </div>
</div>
  <div class="white-container col-xs-12">
      <div class="col-xs-12">
        <h1><%= @post.title %></h1>
      </div>
      <div class="col-xs-12">
        <%= (render_markdown @post.content).html_safe %>
      </div>
      <% unless @post.id.nil? %>
        <div class="form-controls">
          <% if (current_user.can? :edit, @post) %>
            <%= link_to "redigera", edit_post_path(@post), class: "btn btn-small", type: "edit"%>
          <% end %>
          <% if !(@post.nil?) && (current_user.can? :destroy, @post) %>
            <%= link_to "Radera Inlägget", @post, method: :delete, data: { confirm: "Är du verkligen helt säker på att du vill radera nyheten?" }, :class =>"btn", :type => "edit" %>
          <% end %>
        </div>
      <% end %>
  </div>
