<% disabled = false unless disabled %>
<h3>Utcheckning</h3>
<div class="form-group">
  <div>
    <%= f.check_box :medlem_af, :disabled => disabled %>
    <%= f.label :medlem_af, 'Jag 채r medlem i AF' %>
  </div>
  <div>
    <%= f.check_box :medlem_kar, :disabled => disabled %>
    <%= f.label :medlem_kar, 'Jag 채r medlem i min k책r' %>
  </div>
  <div>
    <%= f.check_box :medlem_nation, :disabled => disabled %>
    <%= f.label :medlem_nation, 'Jag 채r medlem i en nation' %>
  </div>
  <div>
    <%= f.check_box :karneveljsbiljett, :disabled => disabled %>
    <%= f.label :karneveljsbiljett, 'Jag har en biljett till karneveljen' %>
  </div>
</div>

<% if @karnevalist.utcheckad %>
  <%= image_tag(@karnevalist.foto_url.to_s, :class => @karnevalist.foto_url.present? ? 'photo' : nil) %>
  <%= f.label :foto, 'Ladda upp ny bild' %>
  <%= f.file_field :foto %>
  <%= f.hidden_field :foto_cache %>
<% else %>
  <%= render partial: "shared/checkout_foto", locals: {f: f} %>
<% end %>
