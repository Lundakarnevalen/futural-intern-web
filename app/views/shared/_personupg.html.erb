<% disabled = false unless disabled %>
<h2>Personuppgifter</h2>

	<div class="form-group">
		<%= f.label :personnummer, 'Personnummer' %>
		<span class="required-field"><img src="/images/required-field.png" alt="*"/></span>
                <%= f.text_field :personnummer, { :pattern => '[0-9]{6}[TP0-9][0-9]{3}', :placeholder => "ÅÅMMDDNNNN", :required => true, :disabled => disabled }  %>
	</div>

	<div class="form-group">
		<h3>Namn <span class="required-field"><img src="/images/required-field.png" alt="*"/></span></h3>
		<%= f.label :fornamn, 'Förnamn', :class => "structural" %>
		<%= f.text_field :fornamn, :placeholder => "Förnamn", :required => true, :disabled => disabled %>
		<%= f.label :efternamn, 'Efternamn', :class => "structural" %>
		<%= f.text_field :efternamn, :placeholder => "Efternamn", :required => true, :disabled => disabled %>
	</div>

	<div class="form-group">
		<h3>Kön <span class="required-field"><img src="/images/required-field.png" alt="*"/></span></h3>

		<div class="radio-group">
			<% Kon.order('id desc').all.each do |k| %>
			<div>
				<%= f.radio_button :kon_id, k.id, :class=>'kon_radio', :required => true, :disabled => disabled  %>
				<%= f.label "kon_id_#{k.id}", k.name, :class=>'kon_radio' %>
			</div>
			<% end %>
		</div>
	</div>

	<div class="form-group">
		<h3>Adress <span class="required-field"><img src="/images/required-field.png" alt="*"/></span></h3>

		<%= f.label :gatuadress, 'Gatuadress', :class => "structural" %>
		<%= f.text_field :gatuadress, :placeholder => "Gatuadress", :required => true, :disabled => disabled %>

		<%= f.label :postnr, 'Postnummer', :class => "structural" %>
		<%= f.text_field :postnr, :placeholder => "Postnummer", :required => true, :disabled => disabled %>

		<%= f.label :postort, 'Ort', :class => "structural" %>
		<%= f.text_field :postort, :placeholder => "Ort", :required => true, :disabled => disabled %>
	</div>

	<div class="form-group">
		<%= f.label :email, 'E-post' %>
		<span class="required-field"><img src="/images/required-field.png" alt="*"/></span>
    	<%= f.text_field :email, :autocorrect => :off, :autocapitalize => :none, :required => true, :type => "email", :disabled => disabled %>
	</div>

	<div class="form-group">
		<%= f.label :telnr, 'Telefonnummer' %>
		<span class="required-field"><img src="/images/required-field.png" alt="*"/></span>
		<%= f.telephone_field :telnr, :required => true, :disabled => disabled %>
	</div>

	<div class="form-group">
		<%= f.label :nation_id, 'Studentnation' %>
		<div>
			<%= f.select :nation_id, Nation.all.collect{ |n| [n.name, n.id] }, {}, {:disabled => disabled} %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :matpref, 'Matpreferenser' %>
		<%= f.text_field :matpref, :disabled => disabled %>
	</div>

	<div class="form-group">
		<%= f.label :storlek_id, 'Tröjstorlek' %>
		<div>
			<%= f.select :storlek_id, Storlek.all.collect{ |s| [s.name, s.id] }, {}, {:disabled => disabled} %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :korkort_id, 'Körkortsbehörighet' %>
		<div>
			<%= f.select :korkort_id, Korkort.all.collect{ |k| [k.name, k.id] }, {}, {:disabled => disabled} %>
		</div>
	</div>
    
    <div class="form-group">
      <div>
        <%= f.check_box :medlem_af, :disabled => disabled %>
        <%= f.label :medlem_af, 'Jag är medlem i AF' %>
      </div>
      <div>
        <%= f.check_box :medlem_kar, :disabled => disabled %>
        <%= f.label :medlem_kar, 'Jag är medlem i min kår' %>
      </div>
      <div>
        <%= f.check_box :medlem_nation, :disabled => disabled %>
        <%= f.label :medlem_nation, 'Jag är medlem i en nation' %>
      </div>
    </div>

	<div class="form-group">
		<%= f.label :ovrigt, 'Övrigt' %>
		<%= f.text_area :ovrigt, :rows => 6, :cols => 40, :disabled => disabled %>
	</div>
